@{
    ViewBag.Title = "The Collection";
}

@model MoviesViewModel 

<div>
    <h2>These are the movies that are currently part of the collection</h2>

    <table>
        <thead>
            <tr><th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Rating</th><th>Edited</th><th>Lent To</th><th>Notes</th><th>Action</th></tr>
        </thead>

        <tbody>
            @foreach (var movie in Model.Movies)
            {
            <tr>
                <td>@movie.Category</td>
                <td>@movie.Title </td>
                <td>@movie.Year </td>
                <td>@movie.Director </td>
                <td>@movie.Rating </td>
                <td>@movie.Edited </td>
                <td>@movie.LentTo </td>
                <td>@movie.Notes </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@movie.MovieID">Edit</a>
                    <a asp-action="Delete" asp-route-id="@movie.MovieID" onclick="return confirm('Are you sure?')">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

<!--Category,
    Title,
    Year,
    Director,
    Rating - dropdown menu (G, PG, PG-13, R),
    Edited - yes/no (true/false) option,
    Lent To,
    Notes - limited to 25 characters

    The “Edited”, “Lent To”, and “Notes” fields are optional. All other fields must be entered.
 -->
